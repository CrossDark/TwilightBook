#let gaussian(x, mu, sigma) = {
    calc.exp(-calc.pow(x - mu, 2) / (2 * calc.pow(sigma, 2))) / (calc.sqrt(2 * calc.pi) * sigma)
}

// 定义高斯分布图像绘制函数（基于cetz-plot）
#let draw-gaussian-plot(
  mu: 52,                 // 均值
  sigma: 10,              // 标准差
  x-min: 0,               // x轴最小值
  x-max: 100,             // x轴最大值
  x-step: 10,             // x轴网格步长
  y-step: 0.02,           // y轴网格步长
  x-label: "频率 (Hz)",   // x轴标签
  y-label: "概率密度",    // y轴标签
  title: "特异性发射频率分布", // 图表标题
  width: 13,              // 图表宽度（单位：pt）
  height: 5               // 图表高度
) = {
  cetz.canvas({
    // 直接使用全局已导入的 plot 模块
    plot.plot(
      size: (width, height),
      plot.add(domain: (x-min, x-max), x => gaussian(x, mu, sigma)),
      grid: (x-step: x-step, y-step: y-step),
      x-label: x-label,
      y-label: y-label,
      title: title
    )
  })
}

